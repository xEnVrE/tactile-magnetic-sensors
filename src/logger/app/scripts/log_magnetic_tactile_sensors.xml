<application>
  <name>Read_magnetic_tactile_sensors_log</name>

  <module>
    <name>tactile-magnetic-sensor-logger</name>
    <parameters></parameters>
    <node>localhost</node>
  </module>

  <module>
    <name>yarpdataplayer</name>
    <parameters>--withExtraTimeCol 2</parameters>
    <node>localhost</node>
  </module>

  <connection>
    <from>/icub/cartesianController/right_arm/state:o</from>
    <to>/tactile-magnetic-sensor-logger/arm_state:i</to>
    <protocol>tcp</protocol>
  </connection>

  <connection>
    <from>/icub/right_arm/state:o</from>
    <to>/tactile-magnetic-sensor-logger/arm_encoders:i</to>
    <protocol>tcp</protocol>
  </connection>

  <connection>
    <from>/icub/right_hand/analog:o</from>
    <to>/tactile-magnetic-sensor-logger/arm_analogs:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/torso/state:o</from>
    <to>/tactile-magnetic-sensor-logger/torso:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/head/state:o</from>
    <to>/tactile-magnetic-sensor-logger/head:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/skin/right_hand</from>
    <to>/tactile-magnetic-sensor-logger/tactile_raw:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/skin/right_hand_comp</from>
    <to>/tactile-magnetic-sensor-logger/tactile_comp:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/tactile-magnetic-sensor/data:o</from>
    <to>/tactile-magnetic-sensor-logger/tactile_3d:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

</application>
